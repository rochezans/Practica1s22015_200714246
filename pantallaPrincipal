    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        //int r;
        if(jRadioButton1.isSelected()){
            if(!jTextField1.getText().equals("")){  
                
                //jLabel1.setIcon(suelo);
                //jLabel1.setText(" ");
                //jLabel2.setText(this.jTextField1.getText());
                agregarElemento("src/imagenes/suelo.png",jTextField1.getText());
                
            }else{
                System.out.println("No se ha escrito un nombre");
                }                     
        }else{
             System.out.println("No se ha seleccionado la imagen"); 
             }
        
    }                                        

    private void recorreLista(){
        NodoImagen temp;
        int posicion;
        if(ListaImagen != null){
            posicion = ListaImagen.getTamanio();
            if(posicion >1){
                for(int i = posicion; i>=1; i--){
                    temp = ListaImagen.getAtras();
                    crearObjetos(ListaImagen);
                    ListaImagen = temp;
                }
            }            
            else{
                crearObjetos(ListaImagen);
            }
        }
    }
    
    private void crearObjetos(NodoImagen nodoA){
        JLabel imagen = new JLabel();
        JLabel nombre = new JLabel();
        imagen.setIcon(nodoA.getImagen());
        imagen.setBounds(10, 10 + (50*nodoA.getTamanio()), 50, 50);
        nombre.setBounds(10, 10 + (50*nodoA.getTamanio()), 30, 100);
        nombre.setText(nodoA.getNombre());
        jPanel2.add(nombre);
        jPanel2.add(imagen);
    }
    
    
    private boolean agregarElemento(String path,String nombre){
        ImageIcon su = new ImageIcon(path);
        Icon suelo = new ImageIcon(su.getImage());
        try{
            if(ListaImagen==null){
                    ListaImagen = new NodoImagen();
                    ListaImagen.setNombre(nombre);
                    ListaImagen.setImagen(suelo);
                    ListaImagen.setTamanio(ListaImagen.getTamanio()+1);
                }else if(ListaImagen.getTamanio()>0){
                    nuevo = new NodoImagen();
                    nuevo.setNombre(nombre);
                    nuevo.setImagen(suelo);
                    nuevo.setTamanio(ListaImagen.getTamanio()+1);
                    ListaImagen.setSiguiente(nuevo);
                    nuevo.setAtras(ListaImagen);
                    ListaImagen = ListaImagen.getSiguiente();
                }
                else{
                    nuevo = new NodoImagen();
                    nuevo.setNombre(nombre);
                    nuevo.setImagen(suelo);
                    nuevo.setTamanio(ListaImagen.getTamanio()+1);
                    ListaImagen.setAtras(ListaImagen.getSiguiente());
                    ListaImagen.setSiguiente(nuevo);
                    ListaImagen = ListaImagen.getSiguiente();
                }
            System.out.println(ListaImagen.getTamanio());
        }catch(Exception e){
            return false;
        }
        
        return true;
    }
    
