    private void jButton13ActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
        ImageIcon mo = new ImageIcon("src/imagenes/moneda.png");
        Icon mone = new ImageIcon(mo.getImage());
        if(jRadioButton5.isSelected() && !jTextField5.getText().equals("")){
            
            //jLabel9.setIcon(mone);
            //jLabel9.setText("");
            //jLabel10.setText(jTextField5.getText());
